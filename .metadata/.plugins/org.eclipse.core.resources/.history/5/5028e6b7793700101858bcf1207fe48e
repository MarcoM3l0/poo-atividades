package br.ifs.grasp.model;

import java.util.List;

public class Pedido {
	
	private Usuario solicitante;
	private List<ItemPedido> itens;
	
	

	public Pedido(Usuario solicitante) {
		this.solicitante = solicitante;
	}

	public boolean adicionarItem(Produto produto, int quantidade) {
		
		ItemPedido item = new ItemPedido(produto, quantidade);
		return itens.add(item);
	}
	
	public double calcularTotal(String cupomDesconto) {
		
		double total = 0;
		
		
		for(ItemPedido item: itens) {
			total += item.calcularSubTotal();
		}
		
		total = aplicarDesconto(total, cupomDesconto.trim());
		
		return total;
	}
	
	private double aplicarDesconto(double total, String cupomDesconto) {
		
		if(cupomDesconto == "BLACKFRIDAY") {
			return total * 0.8;
		}
		if(cupomDesconto == "20REAIS") {
			return total * 0.2;
		}
		
		// Caso tenha mais cupom colocar
		
		return total;
	}

	public Usuario getSolicitante() {
		return solicitante;
	}

	public void setSolicitante(Usuario solicitante) {
		this.solicitante = solicitante;
	}

	public List<ItemPedido> getItens() {
		return itens;
	}

	
}
